---
import { Image } from 'astro:assets';

import CoolCat from '../images/cool-cat.jpg';
import { Icon } from 'astro-icon/components';

import { workGithubUrl, personalGithubUrl } from '../utils/constants';
---

<main class='flex flex-1 flex-col w-full items-center justify-center'>
	<section class='flex flex-col justify-center items-center gap-y-4'>
		<Image src={CoolCat} class='h-52 w-52 rounded-full' alt='thabo rachidi' />
		<h1 class='text-4xl font-bold'>Thabo Rachidi</h1>
		<h2 class='text-3xl font-semibold text-center'>Software Engineer</h2>
		<h3 class='text-2xl font-semibold text-center'>
			Overall cool guy and a lifelong learner
		</h3>

		<ul class='flex gap-x-4'>
			<li>
				<a href={personalGithubUrl} target='blank' title='Personal'>
					<Icon class='h-12 w-12' name='mdi:github' />
				</a>
			</li>
			<li>
				<a href={workGithubUrl} target='blank' title='Work'>
					<Icon class='h-12 w-12' name='mdi:github' />
				</a>
			</li>
		</ul>
	</section>
</main>
